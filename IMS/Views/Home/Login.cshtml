@model IMS.Models.Login;

@{
  ViewData["Title"] = "Login Page";
}

<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body style="background-color: rgb(248, 235, 248);">


  <script>
    var message = '@TempData["ChangePass"]';
    if (message != '')
      alert(message);
  </script>
  <section class="h-100 gradient-form" style="background-color: rgb(245, 214, 242);">
    <div class="container py-3 px-10 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-xl-8">
          <div class="card rounded-3 text-black">
            <div class="row g-0">
              <div class="col-lg-6">
                <div class="card-body p-md-3 mx-md-3">
                  <div class="text-center">
                    <img src="https://th.bing.com/th/id/OIP.3MsoHiIIiSGZcXH0yLSjEgAAAA?pid=ImgDet&rs=1"
                      style="width: 300px;height:150px;" alt="logo">
                    <h4 class="mt-0 mb-4 pb-1" style="color:rgba(129, 10, 109, 0.863) ;">Dear Aspirians!<br>Login to
                      Continue.</h4>
                  </div>
                  <form method="post">
                    <div class="form-outline mb-4">
                      <label class="form-label">User name</label>
                      <input asp-for=Username type="text" class="form-control" placeholder="Email ID" />
                      @Html.ValidationMessageFor((data => data.Username),"",new{@class ="text-danger"})
                    </div>

                    <div class="form-outline mb-4">
                      <label class="form-label">Password</label>
                      <input asp-for=Password type="password" class="form-control" placeholder="Password" minlength="8"
                        maxlength="50" />
                      @Html.ValidationMessageFor((data => data.Password),"",new{@class ="text-danger"})
                    </div>

                    <div class="bar" style="padding: 5%;">
                      <button class="btn btn-primary " style="margin-right: 15%;" type="submit"> Submit </button>
                      <a class="btn btn-outline-primary" href="mailto:neela.dhanalakshmi1810@gmail.com" role="button">
                        Request for an account</a>
                    </div>
                  </form>
                  <div class="bar" style="padding: 5%;">
                    <a href="/Home/ChangePassword"> Change Password</a>
                  </div>

                </div>
              </div>
              <div class="col-lg-6 d-flex align-items-center gradient-custom-2"
                style="background-color: rgb(245, 214, 242);">
                <div class="text-black px-3 py-4 p-md-5 mx-md-4">
                  <h5 class="mb-4" style="color: rgba(129, 10, 109, 0.863);"><i><ins>ABOUT US</ins></i></h5>
                  <p><i> We offer a user-friendly insurance management system for our employees.</i></p>
                  <h5 class="mb-4" style="color: rgba(129, 10, 109, 0.863);"><i><ins>CONTACT US </ins> <a
                        href="mailto:neela.dhanalakshmi1810@gmail.com"
                        style="font-size: medium;">neela.dhanalakshmi1810@gmail.com</a></i></h5>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</body>