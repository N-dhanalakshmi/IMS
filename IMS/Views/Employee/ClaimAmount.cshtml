@model ClaimNow
@{
    ViewData["Title"] = "Claim";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body style="background-color: rgb(248, 235, 248);">
    @* <script>
        var message = '@TempData["Login"]';
        if (message != '')
            alert(message);
    </script> *@
    <form method="post" enctype="multipart/form-data">

        @Html.LabelFor(model => model.EmployeeId, htmlAttributes: new {
        @class = "control-label col-md-2"
        })
        <div class="col-md-10">
            <input asp-for=EmployeeId type="text" class="form-control" value="@ViewBag.id" />
        </div>

        @Html.LabelFor(model => model.Name, htmlAttributes: new {
        @class = "control-label col-md-2"
        })
        <div class="col-md-10">
            <input asp-for=Name type="text" class="form-control" value="@ViewBag.name" />
        </div>
        @Html.LabelFor(model => model.DateofBirth, htmlAttributes: new {
        @class = "control-label col-md-2"
        })
        <div class="col-md-10">
            <input asp-for=DateofBirth type="datetime" class="form-control" value="@ViewBag.dob" />
        </div>
        @Html.LabelFor(model => model.PolicyName, htmlAttributes: new {
        @class = "control-label col-md-2"
        })
        <div class="col-md-10">
            <input asp-for=PolicyName type="text" class="form-control" value="@ViewBag.policyname" />
        </div>
        @Html.LabelFor(model => model.PolicyDate, htmlAttributes: new {
        @class = "control-label col-md-2"
        })
        <div class="col-md-10">
            @* @Html.TextArea("PolicyDate", new { @class = "form-control",value=@ViewBag.policydate}) *@
            <input asp-for=PolicyDate type="datetime" class="form-control" value="@ViewBag.policydate" />
        </div>
        @Html.LabelFor(model => model.PolicyAmount, htmlAttributes: new {
        @class = "control-label col-md-2"
        })
        <div class="col-md-10">
            <input asp-for=PolicyAmount type="number" class="form-control" value="@ViewBag.policyamount" />
        </div>
        @Html.LabelFor(model => model.PolicyDuration, htmlAttributes: new {
        @class = "control-label col-md-2"
        })
        <div class="col-md-10">
            <input asp-for=PolicyDuration type="number" class="form-control" value="@ViewBag.policyduration" />
        </div>
        @Html.LabelFor(model => model.Reason, htmlAttributes: new {
        @class = "control-label col-md-2"
        })
        <div class="col-md-10">
            <input asp-for=Reason type="text" class="form-control" placeholder="Type the reason" required />
            @Html.ValidationMessageFor((data => data.Reason),"",new{@class ="text-danger"})
        </div>
        <br>
        <div class="row">
                @Html.LabelFor(model => model.MedicalProof, htmlAttributes: new {
            @class = "control-label col-md-2"
            })
            <div class="col-md-3">
                <input asp-for=MedicalProof type="file" class="form-control" placeholder="file.Pdf" required />
                    @Html.ValidationMessageFor((data => data.MedicalProof),"",new{@class ="text-danger"})
            </div>
                @Html.LabelFor(model => model.Receipt, htmlAttributes: new {
            @class = "control-label col-md-2"
            })
            <div class="col-md-3">
                <input asp-for=Receipt type="file" class="form-control" placeholder="file.Pdf" required />
                    @Html.ValidationMessageFor((data => data.Receipt),"",new{@class ="text-danger"})
            </div>
            </br><br><br>
            <p><button class="btn btn-primary " style="margin-right: 30%;" type="submit"> Submit </button>
                <a href="/Employee/Dues" role="button"> Back</a>
            </p>
    </form>
</body>