@using System.Data;
@model DataSet;

@{
  ViewData["Title"] = "Details";
}

<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body style="background-color: rgb(248, 235, 248);height: 100%;">
  <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>



  <div class="wrapper">
    <div class="sidebar">
      <h2>Welcome</h2>
      <ul>

        <li><a href="/Admin/EmployeeList"><i class="fas fa-users"></i>Employees</a></li>
        <li><a href="/Admin/PolicyRequests"><i class="fas fa-envelope-open"></i></i>Policy requests</a></li>
        <li><a href="/Admin/ViewClaimRequests?page=1"><i class="fa fa-check-circle" aria-hidden="true"></i></i>Claim requests</a></li>
        <li><a href="/Admin/DuesAll"><i class="fas fa-bell"></i></i>Dues</a></li>
        <li><a href="/Admin/AddEmployee"><i class="fas  fa-plus"></i></i>Add Employee</a></li>
        <li><a href="/Admin/AddNewAdmin"><i class="fas fa-id-badge"></i>Add new Admin</a></li>
        <li><a href="/Admin/Requests"><i class="fas  fa-question-circle"></i></i></i>Requests</a></li>
        <li><a href="/Home/Logout"><i class="fas  fa-sign-out" aria-hidden="true"></i></i></i>Log out</a></li>
      </ul>
    </div>
    <div class="main_content">
      <div class="info">
        @* <h2 style="text-align:center">User Profile </h2> *@

        <div class="card">
          @foreach (DataRow row in Model.Tables[0].Rows)
          {
            <br>
            <img src="@row["ImageUrl"]" alt=" " style="width:40%;margin-left:115px;border-radius: 50%;height: 120px;">

            <br>
            <h2 style="color:black;">@row["EmployeeId"] @row["Name"] </h2>
            <p class="title">Role : @row["Role"] </p>

            <br>
            <p class="title">Age : @row["Age"] </p>

            <br>
            <p class="title">Phone : @row["Phone"] </p>

            <br>
            <p class="title">Address : @row["Address"] </p>

            <br>
            <p class="title"> @row["UserName"] </p>

            <br>
          }

          <p><a href="/Home/UpdateProfile" role="button"
              style="background-color: rgba(129, 10, 109, 0.863);padding:10px;padding-left: 30px;padding-right: 30px;">Update
              Profile</a></p>
          <br>
        </div>


      </div>
    </div>
  </div>
  <style>
    @*@importurl('https://fonts.googleapis.com/css?family=Josefin+Sans&display=swap');*@* {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      list-style: none;
      text-decoration: none;
      font-family: 'Josefin Sans', sans-serif;
    }

    body {
      background-color: rgb(248, 235, 248);
    }

    .wrapper {
      display: flex;
      position: relative;
    }

    .wrapper .sidebar {
      width: 200px;
      height: 100%;
      background: rgba(129, 10, 109, 0.863);
      padding: 30px 0px;
      position: fixed;
    }

    .wrapper .sidebar h2 {
      color: rgb(248, 235, 248);
      text-transform: uppercase;
      text-align: center;
      margin-bottom: 30px;
    }

    .wrapper .sidebar ul li {
      padding: 15px;
      border-bottom: 1px solid #bdb8d7;
      border-bottom: 1px solid rgba(0, 0, 0, 0.05);
      border-top: 1px solid rgba(255, 255, 255, 0.05);
    }

    .wrapper .sidebar ul li a {
      color: #bdb8d7;
      display: block;
    }

    .wrapper .sidebar ul li a .fas {
      width: 25px;
    }

    .wrapper .sidebar ul li:hover {
      background-color: rgba(243, 146, 227, 0.863);
    }

    .wrapper .sidebar ul li:hover a {
      color: #fff;
    }

    .wrapper .sidebar .social_media {
      position: absolute;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      display: flex;
    }

    .wrapper .sidebar .social_media a {
      display: block;
      width: 40px;
      background: #594f8d;
      height: 40px;
      line-height: 45px;
      text-align: center;
      margin: 0 5px;
      color: #bdb8d7;
      border-top-left-radius: 5px;
      border-top-right-radius: 5px;
    }

    .wrapper .main_content {
      width: 100%;
      margin-left: 200px;
    }

    .wrapper .main_content .header {
      padding: 20px;
      background: #fff;
      color: #717171;
      border-bottom: 1px solid #e0e4e8;
    }

    .wrapper .main_content .info {
      margin: 20px;
      color: #717171;
      line-height: 25px;
    }

    .wrapper .main_content .info div {
      margin-bottom: 20px;
    }
  </style>
  <style>
    .card {
      box-shadow: 0 4px 8px 0 rgba(129, 10, 109, 0.863);
      max-width: 400px;
      margin: auto;
      text-align: center;
      font-family: arial;
    }

    .title {
      float: left;
      color: black;
      font-size: 18px;
    }

    button {
      border: none;
      outline: 0;
      display: inline-block;
      padding: 8px;
      color: white;
      background-color: rgba(129, 10, 109, 0.863);
      text-align: center;
      cursor: pointer;
      width: 100%;
      font-size: 18px;
    }

    a {
      text-decoration: none;

      color: violet;
    }

    button:hover,
    a:hover {
      opacity: 0.7;
    }
  </style>

</body>
