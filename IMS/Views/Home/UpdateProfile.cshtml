@model ProfileDetail;
@{
  ViewData["Title"] = "Update Profile";
}

<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body style="background-color: rgb(248, 235, 248);">
  <section class="h-100 gradient-form" style="background-color: rgb(245, 214, 242);">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-xl-4">
          <div class="container py-3 h-100  align-items-center" style="background-color: White;">
            <div class="text-center">
              <img src="https://th.bing.com/th/id/OIP.3MsoHiIIiSGZcXH0yLSjEgAAAA?pid=ImgDet&rs=1"
                style="width: 300px;height:150px;" alt="logo">
              <h4 class="mt-0 mb-5 pb-1" style="color:rgba(129, 10, 109, 0.863) ;">Your Details</h4>
            </div>
            <form method="post" enctype="multipart/form-data">
              <div class="form-outline mb-4">
                <label class="form-label">Profile Photo</label>
                <input asp-for=ImageUrl name="file" type="file" class="form-control" />
                @Html.ValidationMessageFor((data => data.ImageUrl),"",new{@class ="text-danger"})
              </div>
              <div class="form-outline mb-4">
                <label class="form-label">Employee Id</label>
                <input asp-for=EmployeeId type="text" class="form-control" value="@ViewBag.Id" />
                @Html.ValidationMessageFor((data => data.EmployeeId),"",new{@class ="text-danger"})
              </div>
              <div class="form-outline mb-4">
                <label class="form-label">Name</label>
                <input asp-for=Name type="text" class="form-control" value="@ViewBag.name" />
                @Html.ValidationMessageFor((data => data.Name),"",new{@class ="text-danger"})
              </div>
              <div class="form-outline mb-4">
                <label class="form-label">Role</label>
                <input asp-for=Role type="text" class="form-control" />
                @Html.ValidationMessageFor((data => data.Role),"",new{@class ="text-danger"})
              </div>
              <div class="form-outline mb-4">
                <label class="form-label">Age</label>
                <input asp-for=Age type="number" class="form-control" />

              </div>
              <div class="form-outline mb-4">
                <label class="form-label">Phone</label>
                <input asp-for=Phone type="text" class="form-control" />
                @Html.ValidationMessageFor((data => data.Phone),"",new{@class ="text-danger"})
              </div>
              <div class="form-outline mb-4">
                <label class="form-label">Address</label>
                <input asp-for=Address type="text" class="form-control" />

              </div>
              <div class="form-outline mb-4">
                <label class="form-label">User name</label>
                <input asp-for=UserName type="text" class="form-control" value="@ViewBag.user" />
                @Html.ValidationMessageFor((data => data.UserName),"",new{@class ="text-danger"})
              </div>

              <div class="bar" style="padding: 5%;">
                <button class="btn btn-primary " style="margin-right: 30%;" type="submit"> Submit </button>
                <a class="btn btn-outline-primary" asp-action="Cancel" asp-controller="Home" role="button"> Cancel</a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</body>